%div.entity-browser(ng-controller="EntityBrowserCtrl")
  %ul.columns.clearfix
    %li(ng-repeat='column in columns')
      %ul.column(ng-controller="EntityBrowserColumnCtrl")
        %li(ng-repeat='item in items' ng-class='{selected: is_selected(item), child_selected: is_child_selected(item)}' ng-switch on="item.__type")

          %a.connector(ng-click='open(item)' href='javascript:' ng-switch-when='connector')
            %i.icon-book
            {{item.label}}

          %a.entity_set(ng-click='open(item)' href='javascript:' ng-switch-when='entity_set')
            %i.icon-folder-close
            {{item.label}}

          %a.entity(ng-click='open(item)' href='javascript:' ng-switch-when='entity')
            %i.icon-th-large
            {{item.label}}

          %a.action(ng-click='select(item)' href='javascript:' ng-switch-when='action')
            %i.icon-play
            {{item.label}}

          %a.event(ng-click='select(item)' href='javascript:' ng-switch-when='event')
            %i.icon-bullhorn
            {{item.label}}

